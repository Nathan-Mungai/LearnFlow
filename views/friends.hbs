<h2>Friends</h2>
<div class="friends-top">
  <div class="card">
    <h3>Find Friends</h3>
    <form method="POST" action="/friends/search">
      <input name="searchUsername" placeholder="Search by username" required>
      <button type="submit">Search</button>
    </form>
  </div>
  <div class="card">
    <h3>Search Results</h3>
    {{#each searchResults}}
      <div>
        <img src="{{profilePicture}}" class="profile-pic" alt="{{username}}">{{username}} (ID: {{id}}) 
        <a href="/messages/{{id}}" class="friends-link">Message</a>
      </div>
    {{/each}}
  </div>
</div>

<div class="card">
  <h3>All Users</h3>
  {{#each users}}
    <div>
      <img src="{{profilePicture}}" class="profile-pic" alt="{{username}}">{{username}} (ID: {{id}}) 
      <a href="/messages/{{id}}" class="friends-link">Message</a>
    </div>
  {{/each}}
</div>