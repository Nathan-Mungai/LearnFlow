<h2>Welcome, {{user.username}}</h2>
<div class="card create-post-card">
  <h3>Create a Post</h3>
  <form method="POST" action="/posts">
    <input name="content" placeholder="New post" required>
    <button type="submit">Post</button>
  </form>
</div>

<div class="posts-card">
  <h3>Your Posts</h3>
  <div class="post-grid">
    {{#each posts}}
      <a href="/post/{{id}}" class="post-card">
        <p>{{content}}</p>
        <div class="username"><span class="comment-text">By {{username}}</span></div>
        <div class="post-actions">
          {{#if (eq userId ../user.id)}}
            <form method="POST" action="/posts/{{id}}/delete" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          {{/if}}
        </div>
      </a>
    {{/each}}
  </div>
</div>