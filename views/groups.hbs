<h2>Groups</h2>
<div class="card create-group-card">
  <h3>Create a Group</h3>
  <form method="POST" action="/groups">
    <div class="form-row">
      <input name="name" placeholder="Group name" required>
      <textarea name="description" placeholder="Group description (optional)" rows="2"></textarea>
    </div>
    <button type="submit">Create Group</button>
  </form>
</div>

<div class="card">
  <h3>Your Groups</h3>
  {{#if groups}}
    <div class="group-grid">
      {{#each groups}}
        <a href="/group/{{id}}" class="group-card">
          <h4>{{name}}</h4>
          <p>{{description}}</p>
        </a>
      {{/each}}
    </div>
  {{else}}
    <p>You are not in any groups yet.</p>
  {{/if}}
</div>